highmem=1

pkgname=firefox
pkgver=130.0.1
pkgrel=2
pkgdesc="Fast, Private & Safe Web Browser"
url="https://www.mozilla.org/firefox/"
arch=(x86_64)
license=(MPL-2.0)
depends=(
